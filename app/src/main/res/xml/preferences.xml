<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="@string/loginButtonText">
        <SwitchPreference
            android:defaultValue="false"
            android:key="remember_me"
            android:title="@string/autologin_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:title="@string/trending">
        <ListPreference
            android:defaultValue="daily"
            android:entries="@array/trending"
            android:entryValues="@array/trending_values"
            android:key="trending"
            android:summary="@string/trending_summary"
            android:title="@string/trending_title" />
    </PreferenceCategory>
</PreferenceScreen>